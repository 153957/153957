{
  "dependencies": {
    "postcss-cli": "^4.0.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-each": "^0.10.0",
    "postcss-nesting": "^4.0.1",
    "prettier": "^1.4.1",
    "stylelint": "^7.10.1",
    "stylelint-config-concentric-order": "^2.0.1",
    "stylelint-config-standard": "^16.0.0"
  },
  "scripts": {
    "prettier": "prettier --write --tab-width 4 --no-bracket-spacing static/js/*.js",
    "postcss": "postcss static/css/*.css --dir .build/static/css/ -c postcss.config.js",
    "postcss-test": "postcss static/css/*.css --dir .tmp/static/css/ -c postcss.config.js -e test",
    "stylelint": "rm -r .tmp && yarn run postcss-test && stylelint .tmp/static/css/*.css"
  }
}
